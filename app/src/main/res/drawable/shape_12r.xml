<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="@color/blue"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="2dp"
                android:right="1dp"
                android:top="2dp" />
            <solid android:color="@color/blue"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="3dp"
                android:right="1dp"
                android:top="3dp" />
            <solid android:color="@color/white"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>

</layer-list>