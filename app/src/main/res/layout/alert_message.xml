<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    android:background="@drawable/shape_12r"
    android:layout_gravity="center"
    android:padding="24dp">

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="@dimen/message_image_size"
        android:layout_height="@dimen/message_image_size"
        app:srcCompat="@drawable/mind_map_pana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/message_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/message_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="kdsjksljdaskda djkasdjasdhasjdhas dsjdiasdasldha djaskdhasjdhasjd jsdashfsjdfhsdjf asjdakshfjsfhsdjk jfksdjfhdjskfhsdjkf "
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>